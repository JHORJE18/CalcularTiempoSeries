<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorPrimary">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@color/colorPrimaryDark">
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_back_bar"
                    android:id="@+id/backButton" android:layout_weight="6"
                    android:background="@drawable/button_round" android:visibility="invisible"
                    android:layout_marginLeft="10dp" android:onClick="onCllick"/>
            <TextView
                    android:text="Calcular Tiempo Series"
                    android:layout_width="match_parent"
                    android:autoSizeTextType="uniform"
                    android:layout_height="wrap_content" android:id="@+id/txtTitulo" android:textStyle="bold"
                    android:textSize="30sp" android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:paddingBottom="5dp" android:paddingLeft="10dp" android:paddingRight="10dp"
                    android:paddingTop="10dp" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView" android:layout_weight="6"
                    android:layout_marginRight="10dp"/>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp" android:background="@android:color/background_light"
        />
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/fragment_Principal" android:layout_weight="1">

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>